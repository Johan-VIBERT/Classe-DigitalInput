#include <Arduino.h>
#include <DigitalInput.h>

#define FDC_OUVR   4
#define FDC_FERM   5

/*! ===========================================================================================================================
//  Objets et variables globales
// ===========================================================================================================================*/

/// OBJETS:
DigitalInput fdcOUV(FDC_OUVR,LOW);
DigitalInput fdcFER(FDC_FERM,LOW);

///VARIABLES:

/*! ===========================================================================================================================
//  Setup
// ===========================================================================================================================*/

void setup()
{
    Serial.begin(115200);
}

/*! ===========================================================================================================================
//  programme principal
// ===========================================================================================================================*/

void loop()
{
    if (fdcOUV.isHigh())
    {
        Serial.println ("--FDC OUVRE actif--");
        delay(2000);
    }
    if (fdcFER.isHigh())
    {
        Serial.println ("--FDC FERME actif--");
        delay(2000);
    }
}
